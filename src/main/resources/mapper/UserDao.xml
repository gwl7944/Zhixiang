<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doctor.app.dao.UserDao">

    <!--用户登录-->
    <select id="userLogin" parameterType="String" resultType="com.doctor.app.entity.User">
        select * from  `user` where user_name = #{user_name} and user_pwd = #{user_pwd} and user_del=1
    </select>

    <!--用户新增-->
    <insert id="insertUser" parameterType="com.doctor.app.entity.User">
        insert into  `user`(user_name,user_pwd,user_phone,user_del) values (#{user_name},#{user_pwd},#{user_phone},1)
    </insert>

    <!--全查用户-->
    <select id="selectAllUser" parameterType="String" resultType="com.doctor.app.entity.User">
        select * from  `user` where user_del =1
    </select>

    <!-- 根据ID查询用户 -->
    <select id="selectUserById" parameterType="Integer" resultType="com.doctor.app.entity.User">
         select * from  `user` where id = #{id}
    </select>

    <!--更新用户-->
    <update id="updateUserSql" parameterType="com.doctor.app.entity.User">
        update`user`
        <set>
            <if test="user_name != null and user_name != ''">
                user_name = #{user_name},
            </if>
            <if test="user_pwd != null and user_pwd != ''">
                user_pwd = #{user_pwd},
            </if>
            <if test="user_phone != null and user_phone != ''">
                user_phone = #{user_phone}
            </if>
        </set>
        where id = #{id} and user_del =1
    </update>

    <!--刪除用戶-->
    <update id="deleteUserSql" parameterType="Integer">
        update `user` set user_del =2 where id = #{id}
    </update>
</mapper>